    "jest-chain": "^1.1.2",
    "jest-environment-jsdom-global": "^1.2.0",
    "jest-enzyme": "^7.1.2",
    "jest-extended": "^0.11.2",
    "jest-watch-typeahead": "^0.4.2",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "repo-tools": "^0.2.0",
    "rimraf": "^3.0.0",
    "rollup": "^1.27.13",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "typescript": "^3.7.3"
  },
  "scripts": {
    "build": " npm run clean && npm run build:scripts",
    "build:scripts": "cross-env NODE_ENV=production rollup -c",
    "watch": "rollup -cw",
    "clean": "rimraf es && rimraf lib",
    "lint": "eslint --ext .js --ext .jsx src test",
    "test": "is-ci \"test:coverage\" \"test:watch\"",
    "test:coverage": "jest --bail --coverage",
    "test:watch": "jest --watch --verbose",
    "format": "prettier \"**/*.{js,jsx,ts,tsx}\" --write",
    "validate": "npm run lint && npm run test:coverage && flow && npm run build && size-limit",
    "size": "npm run build && size-limit",
    "prepublishOnly": "npm run validate"
  },
  "size-limit": [
    {
      "path": "./es/index.js",
      "limit": "30 kB"
    },
    {
      "path": "./lib/index.js",
      "limit": "30 kB"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "repo-tools check-remote && flow",
      "post-merge": "repo-tools install-packages"
    }
  },
  "lint-staged": {
    "*.js?(x)": [
      "eslint --fix",
      "git add",
      "jest --findRelatedTests"
    ],
    "*.(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|graphql|mdx)": [
      "prettier --write",
      "git add"
    ]
  }
}
