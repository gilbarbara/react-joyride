    "nested-property": "^1.0.2",
    "react-floater": "^0.7.2",
    "react-is": "^16.12.0",
    "react-joyride": "Drogbi/react-joyride",
    "scroll": "^3.0.1",
    "scrollparent": "^2.0.1",
    "tree-changes": "^0.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-proposal-decorators": "^7.7.4",
